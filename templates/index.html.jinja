<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>PyBroma Bindings Explorer</title>
<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0; padding: 0;
    display: flex; height: 100vh;
  }
  #sidebar {
    width: 280px;
    background-color: #222;
    color: #eee;
    overflow-y: auto;
    padding: 10px;
  }
  #sidebar h2 {
    margin-top: 0;
    border-bottom: 1px solid #444;
    padding-bottom: 10px;
    font-size: 1.4em;
  }
  #class-list {
    list-style: none;
    padding-left: 0;
    margin: 0;
  }
  #class-list li {
    cursor: pointer;
    padding: 8px 12px;
    border-radius: 4px;
  }
  #class-list li:hover {
    background-color: #444;
  }
  #class-list li.active {
    background-color: #007acc;
  }
  #content {
    flex-grow: 1;
    padding: 20px;
    overflow-y: auto;
    background-color: #f9f9f9;
  }
  h1 {
    margin-top: 0;
  }
  .inherits {
    font-style: italic;
    margin-bottom: 1em;
    color: #555;
  }
  table {
    border-collapse: collapse;
    width: 100%;
    margin-bottom: 2em;
  }
  th, td {
    border: 1px solid #ccc;
    padding: 8px;
  }
  th {
    background-color: #333;
    color: white;
    text-align: left;
  }
  .platform-address {
    font-family: monospace;
    color: #007700;
  }
  .type-info {
    color: #555;
  }
</style>
</head>
<body>

<div id="sidebar">
  <h2>Classes ({{ classes|length }})</h2>
  <ul id="class-list">
    {% for cls in classes %}
      <li data-index="{{ loop.index0 }}">{{ cls.name }}</li>
    {% endfor %}
  </ul>
</div>

<div id="content">
  <h1>Select a class to view details</h1>
</div>

<script>
  const classes = {{ classes | tojson | safe }};
  const classListEl = document.getElementById('class-list');
  const contentEl = document.getElementById('content');

  function renderClass(cls) {
    const inherits = cls.inherits.length ? cls.inherits.join(', ') : 'None';

    let html = `<h1>${cls.name}</h1>`;
    html += `<div class="inherits"><strong>Inherits:</strong> ${inherits}</div>`;

    html += `<table><thead><tr>
      <th>Name</th>
      <th>Args</th>
      <th>Win Addr</th>
      <th>Mac Addr</th>
      <th>iOS Addr</th>
      <th>Type</th>
    </tr></thead><tbody>`;

    cls.members.forEach(member => {
      const args = member.args
        ? (typeof member.args === 'object'
            ? Object.entries(member.args).map(([k,v]) => `${k}: ${v}`).join(', ')
            : member.args)
        : '';

      function showAddr(addr) {
        return addr ? `<span class="platform-address">${addr}</span>` : `<span style="color:#999;">None</span>`;
      }

      const winAddr = member.addresses?.win || null;
      const macAddr = member.addresses?.mac || null;
      const iosAddr = member.addresses?.ios || null;
      const typeInfo = member.type || 'Function';

      html += `<tr>
        <td>${member.name}</td>
        <td>${args}</td>
        <td>${showAddr(winAddr)}</td>
        <td>${showAddr(macAddr)}</td>
        <td>${showAddr(iosAddr)}</td>
        <td class="type-info">${typeInfo}</td>
      </tr>`;
    });

    html += '</tbody></table>';

    return html;
  }

  function clearActive() {
    document.querySelectorAll('#class-list li').forEach(li => li.classList.remove('active'));
  }

  classListEl.addEventListener('click', e => {
    if (e.target.tagName !== 'LI') return;

    clearActive();
    e.target.classList.add('active');

    const idx = parseInt(e.target.getAttribute('data-index'));
    contentEl.innerHTML = renderClass(classes[idx]);
  });

  // Select first class by default
  if (classes.length > 0) {
    classListEl.children[0].classList.add('active');
    contentEl.innerHTML = renderClass(classes[0]);
  }
</script>

</body>
</html>
